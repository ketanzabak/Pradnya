#include <iostream>

using namespace std;

struct B {
  virtual void whoami () const
    {cout << "B" << endl;}
};

struct D : public B {
  void whoami ()
    {cout << "D" << endl;}
};

int main() {
  D d;
  B *b = &d;
  b->whoami();
  D *dd = &d;
  dd->whoami();
}

$ a)B D $ b) B B $ c) D B $ d) D D  $1


