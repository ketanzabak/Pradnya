#include <stdio.h>
int main()
{
unsigned int k = 987 , i = 0;
char trans[10];

do {
trans[i++] = (k%16 > 9 ? k%16 - 10 + 'a' : k%16 +'A' );
printf("%d %d ",k,k%16);

} while(k != 16);

printf("%s ", trans);
return 0;
}

